    <script>
        function toggleTheme() {
            document.body.classList.toggle('dark');
            const btn = document.querySelector('.theme-switch');
            if(document.body.classList.contains('dark')) {
                btn.textContent = 'Light Mode';
            } else {
                btn.textContent = 'Dark Mode';
            }
        }
    </script>
